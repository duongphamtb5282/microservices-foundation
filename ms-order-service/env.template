# ==============================================================================
# ORDER SERVICE ENVIRONMENT VARIABLES TEMPLATE
# ==============================================================================
# Copy this file to .env and customize for your environment
# DO NOT commit .env file to version control
# ==============================================================================

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
SPRING_APPLICATION_NAME=ms-order-service
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8081
SERVER_CONTEXT_PATH=/

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orders_db
DB_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DRIVER=org.postgresql.Driver

# Database Connection Pool
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA/Hibernate
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
HIBERNATE_FORMAT_SQL=true
HIBERNATE_JDBC_TIME_ZONE=UTC
JPA_OPEN_IN_VIEW=false

# Liquibase
LIQUIBASE_ENABLED=true
LIQUIBASE_CHANGE_LOG=classpath:db/changelog/db.changelog-master.xml
LIQUIBASE_DEFAULT_SCHEMA=public

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms
REDIS_LETTUCE_POOL_MAX_ACTIVE=8
REDIS_LETTUCE_POOL_MAX_IDLE=8
REDIS_LETTUCE_POOL_MIN_IDLE=0
REDIS_LETTUCE_POOL_MAX_WAIT=-1ms

# ==============================================================================
# KAFKA CONFIGURATION
# ==============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=order-service
KAFKA_AUTO_OFFSET_RESET=earliest

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================
CACHE_TYPE=redis
CACHE_REDIS_TIME_TO_LIVE=3600000

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_ORDER=INFO
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_SPRING_DATA_JPA=DEBUG
LOG_LEVEL_LIQUIBASE=INFO
LOG_FILE=logs/ms-order-service.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# ==============================================================================
# ACTUATOR CONFIGURATION
# ==============================================================================
ACTUATOR_BASE_PATH=/actuator
ACTUATOR_ENDPOINTS=health,info,metrics,prometheus
ACTUATOR_HEALTH_SHOW_DETAILS=when-authorized
ACTUATOR_HEALTH_ENABLED=true
ACTUATOR_INFO_ENABLED=true
ACTUATOR_METRICS_ENABLED=true
PROMETHEUS_ENABLED=true

# ==============================================================================
# OPENAPI/SWAGGER CONFIGURATION
# ==============================================================================
API_TITLE=Order Service API
API_DESCRIPTION=Order Management REST API
API_VERSION=1.0.0
API_LICENSE_NAME=Apache 2.0
API_LICENSE_URL=https://www.apache.org/licenses/LICENSE-2.0
API_SERVER_URL=http://localhost:8081

SPRINGDOC_API_DOCS_PATH=/v3/api-docs
SPRINGDOC_API_DOCS_ENABLED=true
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
SPRINGDOC_SWAGGER_UI_ENABLED=true
SPRINGDOC_OPERATIONS_SORTER=method
SPRINGDOC_TAGS_SORTER=alpha

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
SECURITY_ENABLED=true
SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://localhost:8082

# ==============================================================================
# ORDER-SPECIFIC CONFIGURATION
# ==============================================================================
ORDER_STATUS_TRANSITIONS_ENABLED=true
ORDER_INVENTORY_CHECK_ENABLED=true
ORDER_PAYMENT_REQUIRED=true

# Order Processing
ORDER_PROCESSING_TIMEOUT=30000
ORDER_MAX_ITEMS_PER_ORDER=50
ORDER_DEFAULT_CURRENCY=USD

# Inventory Integration
INVENTORY_SERVICE_URL=http://localhost:8083
INVENTORY_CHECK_ENABLED=true
INVENTORY_RESERVATION_TIMEOUT=60000

# Payment Integration
PAYMENT_SERVICE_URL=http://localhost:8083
PAYMENT_TIMEOUT=30000

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================
MONITORING_ENABLED=true
MONITORING_HEALTH_CHECKS_ENABLED=true
MONITORING_METRICS_ENABLED=true
MONITORING_LOGGING_ENABLED=true
MONITORING_LOG_LEVEL=INFO

# ==============================================================================
# DOCKER-SPECIFIC OVERRIDES
# ==============================================================================
# Uncomment and use these when running in Docker containers

# DB_HOST=postgres
# REDIS_HOST=redis
# KAFKA_BOOTSTRAP_SERVERS=kafka:9092
# SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://auth-service:8082
# INVENTORY_SERVICE_URL=http://ms-payment-service:8083
# PAYMENT_SERVICE_URL=http://ms-payment-service:8083

# ==============================================================================
# PRODUCTION-SPECIFIC SETTINGS
# ==============================================================================
# These should be set in production environment

# DB_PASSWORD=<strong-database-password>
# REDIS_PASSWORD=<strong-redis-password>
# ORDER_PROCESSING_TIMEOUT=60000
# ORDER_MAX_ITEMS_PER_ORDER=100

